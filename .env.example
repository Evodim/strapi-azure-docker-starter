# Database Configuration
# Supported clients: mysql, postgres, sqlite, etc.
DATABASE_CLIENT=postgres

# Database connection details
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi_db
DATABASE_USERNAME=strapi_user
DATABASE_PASSWORD=your_secure_password_here
# Set to true if your database server requires SSL connection
DATABASE_SSL=false

# Azure Storage Configuration
# Your Azure Storage Account name
STORAGE_ACCOUNT=mystrapistorageaccount
# Primary or secondary access key from Azure Storage Account
STORAGE_ACCOUNT_KEY=your_azure_storage_key_here_64_characters_long==
# Azure Storage blob service URL
STORAGE_URL=https://mystrapistorageaccount.blob.core.windows.net
# Container name for storing files (must be lowercase)
STORAGE_CONTAINER_NAME=strapi-uploads
# Default path/folder within the container
STORAGE_DEFAULT_PATH=uploads
# Maximum number of concurrent uploads (recommended: 10-50)
STORAGE_MAX_CONCURRENT=20
# Optional: Azure CDN URL for faster content delivery managed or public: cdn.mywebsite.com
STORAGE_CDN_URL=https://mycdn.azureedge.net

# Strapi Server Configuration
# Host for the Strapi admin panel and API
SERVER_HOST=0.0.0.0
# Port for the Strapi server
SERVER_PORT=1337
# Allowed hosts for CORS (comma-separated list)
# Examples: localhost:3000,myapp.com,*.myapp.com
AVAILABLE_HOST=localhost:3000,localhost:8080,myapp.azurewebsites.net